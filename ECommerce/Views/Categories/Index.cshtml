@model IEnumerable<Category>

@{

	ViewData["title"] = "index";
}


<div class="row">
	<div class="col-md-9">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(x => x.Name)</th>
					<th>@Html.DisplayNameFor(x => x.Description)</th>
					<th>Action</th>
				</tr>

			</thead>

			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@Html.DisplayFor(x => item.Name)</td>
						<td>@Html.DisplayFor(x => item.Description)</td>
						<td>
							<a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-regular fa-pencil mr-2"></i> Edit</a>
							<a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-regular fa-eye mr-2"></i>Details</a>
							<a class="btn btn-outline-danger"><i class="fas fa-regular fa-trash mr-2"></i>Delete</a>
						</td>
					</tr>
				}

			</tbody>

		</table>
	</div>
</div>


<div class="text-white" style="position:fixed;right:25px;bottom:25px;">
	<a asp-action="Create" asp-controller="Categories" class="btn btn-outline-success">
		<i class="fas fa-regular fa-plus-square mr-2"></i>
		Create</a>
</div>